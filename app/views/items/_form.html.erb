<h2>Add New To-Do Item</h2>

<%= form_for @item do |f| %>

    <div class='form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control',  placeholder: "Enter item here" %>
    </div>
    
    <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
    </div>
    
<% end %>